<div class="row" ng-show="ui.showLestElementPanel" id="ListElementPanel">
    <div class="col-lg-10 col-lg-offset-1">
        <div class="panel panel-success">
            <div class="panel-heading headingButton">
                <h3 class="panel-title">Elements list</h3>
                
                <div class="btn-group pull-right">
                    <button class="btn btn-danger" ng-click="ui.showLestElementPanel=false"><span class="glyphicon glyphicon-remove"></span></button>
                </div>
            </div>
            <div class="panel-body">
                <div class="col-lg-3 panel panel-default">

                </div>
                <div class="col-lg-5 panel panel-default">
                    <div class="elementItem" onclick="pressedItem(event)" ng-repeat="n in ui.ElementList track by $index" ng-click="ui.SelectElem = n">
                        <span>{{n.Name}}</span>
                    </div>
                </div>
                <div class="col-lg-4 panel panel-default">
                    <div class="panel-default elementListInfo">
                        <span></span>
                        <div class="col-lg-12">
                            <div>ElementName:</div>
                            <input class="form-control col-lg-12" value="{{ui.SelectElem.Name}}" />
                            <div>Description:</div>
                            <textarea class="form-control">{{ui.SelectElem.Description}}</textarea>
                            <div class="btn-group col-lg-12">
                                <button class="btn btn-success btn-lg col-lg-6" ng-click="ui.showLestElementPanel = false; ElementOpen()">Open</button>
                                <button class="btn btn-danger btn-lg col-lg-6"  ng-click="RemoveElement()">Remove</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
