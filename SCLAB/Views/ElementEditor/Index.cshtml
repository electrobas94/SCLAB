
@{
    ViewBag.Title = "Index";
}
.


<div class="row" ng-app="ElementEditor" ng-controller="MeshLoaderController">
    @Html.Partial("MeshLoadPanel")
    @Html.Partial( "ElementListPanel" )
    <div class="col-lg-10 col-lg-offset-1" id="ElementEditorPanel">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-success headerPanelElementEditor">
                            <div class="panel-body">
                                <div class="col-sm-2 media">
                                    <img src="~/Content/images/download.png" />
                                </div>
                                <div class="col-sm-10">
                                    <div style="display:inline-block">
                                        <div id="nameElement">
                                            Name Element: <span contenteditable="true">Name</span>
                                        </div>
                                        <div id="typeElement">
                                            Type Element:
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" id="btnType">
                                                    Type
                                                    <span class="caret">
                                                    </span>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li><a href="#">Button</a></li>
                                                    <li><a href="#">Input</a></li>
                                                    <li><a href="#">Output</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="btn-toolbar btnToolbarBig pull-right">
                                        <div class="btn-group-vertical" style="margin-right:-47px;">
                                            <button type="button" class="btn btn-success btn-lg btnAnimIncrease"><span class="glyphicon glyphicon-file"></span> New</button>
                                            <button type="button" class="btn btn-info btn-lg btnAnimIncrease"><span class="glyphicon glyphicon-folder-open"></span> Open</button>
                                            <button type="button" class="btn btn-warning btn-lg btnAnimIncrease" ng-click="ElementSave()">
                                                <span class="glyphicon glyphicon-floppy-saved"></span> Save
                                            </button>
                                            
                                        </div>
                                    </div>
                                </div>

                                    
                            </div>
                            
                            


                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">

                        <div class="panel panel-default" id="canvasPanel">
                            <div class="panel-body" id="CanvasElementEditor">
                                <div class="btn-group" id="buttonCanvas">
                                    <button type="button" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-move"></span> Move</button>
                                    <button type="button" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-refresh"></span> Rotate</button>
                                    <button type="button" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-fullscreen"></span> Scale</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">Element editor</div>
                            <div class="panel-body">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">

                        <div class="panel panel-default">
                            <div class="panel-heading">Animation key</div>
                            <div class="panel-body">
                                <div class="list-group">
                                    <button type="button" class="list-group-item">Cras justo odio</button>
                                    <button type="button" class="list-group-item">Dapibus ac facilisis in</button>
                                </div>
                                <div class="btn-group pull-right">
                                    <button class="btn btn-default">Apply</button>
                                    <button class="btn btn-default">Revert</button>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-6">
                        @Html.Partial("MeshListPanel")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/blender")
@Scripts.Render("~/bundles/angular")
@Scripts.Render("~/bundles/ElementEditor")